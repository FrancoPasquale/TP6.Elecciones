<form method="post" action='@Url.Action("GuardarCandidato","Home")'>
    <input type="hidden" name="FkPartido" value="@ViewBag.IdPartido">
    <input autocomplete="off" type="text" name="Nombre" placeholder="Ingresar nombre" required>
    <input autocomplete="off" type="text" name="Apellido" placeholder="Ingresar apellido" required>
    <input autocomplete="off" type="date" name="FechaNacimiento" placeholder="Ingresar fecha de nacimiento" required>
    <input autocomplete="off" type="text" name="Foto" placeholder="ingresar foto" required>
    <input autocomplete="off" type="text" name="Postulacion" placeholder="Ingresar cargo postulado" required>
    <input type="submit" name="enviar">
</form>